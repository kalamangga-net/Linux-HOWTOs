  keycode 0x2E =  l               L               0x0ca           0x0c8
  keycode 0x2F =  semicolon       colon           0x0c7           0x0ab
  keycode 0x30 =  apostrophe      quotedbl        0x0a7           period
  keycode 0x53 =  KP_4
